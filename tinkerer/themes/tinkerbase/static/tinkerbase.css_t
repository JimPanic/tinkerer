@import url("basic.css");

/* WebFont ----------------------------------------------------------------- */
@font-face {
    font-family: "WebSymbolsRegular";
    src: url("websymbols-regular-webfont.eot");
    src: url("websymbols-regular-webfont.eot?#iefix") format("embedded-opentype"),
         url("websymbols-regular-webfont.woff") format("woff"),
         url("websymbols-regular-webfont.ttf") format("truetype"),
         url("websymbols-regular-webfont.svg#WebSymbolsRegular") format("svg");
    font-weight: normal;
    font-style: normal;
}

.webfont {
    font-family: WebSymbolsRegular;
    font-weight: normal;
    font-style: normal;
}

/* General style ----------------------------------------------------------- */

html {
    maring: 0;
    padding: 0;
}

body {
    -webkit-text-size-adjust: none;
    font-size: 1.1em;
    max-width: 1000px;
}

/* Page navigation --------------------------------------------------------- */
div.page_nav ul {
    list-style-type: none;
}

div.page_nav li.right {
    float: right;
}

/* Header ------------------------------------------------------------------ */
div.header {
    margin-bottom: 48px;
}

/* Related ----------------------------------------------------------------- */
div.related {
    height: 2em;
}

/* Document ---------------------------------------------------------------- */
div.document {
    margin-right: 302px;
    padding: 24px;
    padding-top: 0;
}

div.document h1 {
    margin-top: 0;
}

/* Sidebar ----------------------------------------------------------------- */
div.sphinxsidebarwrapper {
    display: block;
    padding: 0;
}

div.sphinxsidebar {
    float: right;
    padding: 24px;
    padding-top: 0;
    width: 206px;
}

/* Sidebar widgets --------------------------------------------------------- */
div.widget {
    margin-bottom: 48px;
}

div.widget h3 {
    margin-top: 0;
}

/* Footer ------------------------------------------------------------------ */
div.footer {
    font-size: 80%;
    margin-bottom: 24px;
}

/* Hide sidebar on smaller displays and iPhone ============================= */
@media screen and (max-width: 800px), screen and (max-device-width: 480px)
{
    /* Document ------------------------------------------------------------ */
    div.document {
        margin-right: 0;
    }

    /* Sidebar ------------------------------------------------------------- */
    div.sphinxsidebar {
        visibility: hidden;
    }
}

/* Retina displays ========================================================= */
@media screen and (-webkit-min-device-pixel-ratio: 2)
{
    /* Body ---------------------------------------------------------------- */
    body {
        font-size: 200%;
    }
}

